<h1 class='text-center'>Welcome to <span class='shadow-into-light'>ToDo!</span></h1>

<%= render 'shared/header', header: 'Login' %>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_tag do %>
      <div class='form-group'>
        <div class='input-group'>
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='input-group'>
          <span class="input-group-addon glyphicon glyphicon-pencil"></span>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-primary pull-right' %>
    <% end %>
    <br/>
    <br/>
    <br/>
    <br/>
    <p class='text-center'>
      Don't have an account yet? Go ahead and <%= link_to 'Register', register_path %>!
    </p>
  </div>
</div>
