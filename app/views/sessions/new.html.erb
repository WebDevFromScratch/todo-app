<%= render 'shared/header', header: 'Login' %>

<%= form_tag do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br/>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br/>
  <%= submit_tag 'Login' %>

  <br/>
  <br/>
  <h4>
    Don't Have an Account? Go Ahead and <%= link_to 'Register', register_path %>
  </h4>
<% end %>