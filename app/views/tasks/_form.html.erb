<%= form_for [@user, @task] do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: '10' %>
  </div>
  <div class='form-group'>
    <%= f.label :category_id %>
    <br/>
    <%= f.collection_radio_buttons :category_id, @categories, :id, :name do |rb| %>
      <% rb.label(class: 'radio-inline') {rb.radio_button(class: 'radio') + rb.text} %>
    <% end %>
  </div>
  <div class='form-group'>
    Need more categories? <%= link_to "Add Categories", user_my_categories_path, class: 'btn btn-success btn-sm' %>
  </div>
  <div class='form-group'>
    <%= f.label :priority %>
    <%= f.select(:priority, [['Low', 1], ['Medium', 2], ['High', 3]], class: 'form-control') %>
  </div>
  <div class='form-group'>
    <%= f.label :deadline %>
    <%= f.date_select :deadline %>
  </div>
  <%= f.submit button_text, class: 'btn btn-primary pull-right' %>
<% end %>
<br/>
<br/>
<br/>
<br/>
<p class='text-center'><%= link_to "Back", root_path %></p>
