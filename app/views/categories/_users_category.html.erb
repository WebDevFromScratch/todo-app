<div class="well well-sm" id="category-<%= category.id %>">
  <h4>
    <%= category.name %>
    <%= link_to user_remove_category_path(@user, category), method: 'post', class: 'btn btn-sm btn-default pull-right' do %>
      <span class='glyphicon glyphicon-remove'></span>
    <% end %>
  </h4>
</div>