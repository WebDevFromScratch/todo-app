<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <%= form_for @user do |f| %>
      <div class='form-group'>
        <div class='input-group'>
          <span class="input-group-addon glyphicon glyphicon-user"></span>
          <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='input-group'>
          <span class="input-group-addon glyphicon glyphicon-pencil"></span>
          <%= f.text_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='input-group'>
          <span class="input-group-addon glyphicon glyphicon-ok"></span>
          <%= f.text_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
        </div>
      </div>
      <%= f.submit button_text, class: 'btn btn-primary pull-right' %>
    <% end %>
    <br/>
    <br/>
    <br/>
    <br/>
    <p class='text-center'><%= link_to "Back", root_path %></p>
  </div>
</div>